{% block pageHeader %}
<div class="container">
  <div class="row align-center justify-content-md-center">
    <div class="col-12 col-md-10">
      <div class="page-header {% block headerClasses %}{% endblock %}">
        <h1 class="project__title post-title">{{ post.title }}</h1>
        {% block donations %}
        {% endblock %}
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block pageContent %}
  <main class="container page-content-padding page-content">
    <div class="row">
      <div class="col-12">
        {{ post.content }}
      </div>
    </div>
  </main>
{% endblock %}
